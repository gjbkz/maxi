@import '_constants.styl'
@import '_functions.styl'
@import '_brand.styl'

.ObjectInfo
.ObjectList
	&>li
		user-select text

.ObjectList
	&>li
		display block
		&.ObjectListHeader
			&>a
				&>div
					font-weight bold
		&>a
			display flex
			padding-right $u(0.7)
			&>div
				flex-basis 100px
				flex-grow 1
				&:first-child
					flex-basis 50px
					flex-grow 0
					@media(max-width:850px)
						display none
				&:nth-child(2)
					@media(max-width:500px)
						display none
				&:nth-child(5)
					flex-basis 100px
					flex-grow 0
					@media(max-width:750px)
						display none
				&:nth-child(6)
					text-align right
					flex-basis 100px
					flex-grow 0
					@media(max-width:320px)
						display none
				&:last-child
					text-align right
					flex-basis 200px
					@media(max-width:750px)
						flex-basis 100px
					@media(max-width:550px)
						display: none;

[data-graph]
	display block
	background-color #fff
	width 100%
	height 400px

.ListItem_Counter
	padding-right $u(1)
	&>.Label
		flex-basis $u(2)
		flex-grow 0.1
		text-align center
	&>button:last-child
	&>button
		padding 0
		flex-grow 0
		flex-shrink 0
		width $u(1)
		flex-basis @width
		text-align center
		height 100%

footer
	margin-top $u(1)
	text-align center
	line-height 1.5