{
    "private": true,
    "license": "Apache-2.0",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint"
    },
    "dependencies": {
        "@nlib/typing": "0.3.4",
        "htmlparser2": "7.2.0",
        "next": "12.1.6",
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.17.30",
        "@nlib/githooks": "0.1.0",
        "@types/jest": "27.5.1",
        "@types/react": "17.0.45",
        "@typescript-eslint/eslint-plugin": "5.27.0",
        "@typescript-eslint/parser": "5.27.0",
        "eslint-config-next": "12.1.6",
        "eslint-plugin-jest": "26.2.2",
        "jest": "27.5.1",
        "ts-jest": "27.1.5",
        "ts-node": "10.8.0"
    },
    "browserslist": [
        ">5%",
        "not ie 11",
        "not dead"
    ],
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "moduleFileExtensions": [
            "cjs",
            "mjs",
            "js",
            "jsx",
            "ts",
            "tsx"
        ],
        "preset": "ts-jest/presets/js-with-ts",
        "collectCoverage": true
    },
    "eslintConfig": {
        "extends": [
            "next/core-web-vitals",
            "@nlib/eslint-config"
        ],
        "rules": {
            "@nlib/no-globals": "off"
        },
        "overrides": [
            {
                "files": [
                    "*.test.ts"
                ],
                "plugins": [
                    "jest"
                ],
                "env": {
                    "jest/globals": true
                }
            }
        ]
    },
    "lint-staged": {
        "*!(.d).{ts,tsx,js,mjs,cjs,jsx}": "eslint"
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
